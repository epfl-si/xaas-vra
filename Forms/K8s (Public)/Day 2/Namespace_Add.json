        "pattern": {
          "value": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "message": "New namespace name must begin and end with letter/digit and must contain letters/digits or minus sign (-)."
        },
        "required": true
      }
    },
    "textField_status": {
      "label": "Status",
      "type": {
