                "display": "textArea",
                "state": {
                  "visible": true,
                  "read-only": false
                },
                "signpostPosition": "right-middle"
              }
            ]
          },
          {
            "id": "section_funding",
            "fields": [
              {
                "id": "dropDown_funding",
                "display": "dropDown",
                "state": {
                  "visible": true,
                  "read-only": false
                },
                "signpostPosition": "right-middle"
              }
            ]
          },
          {
            "id": "section_fnsPrjName",
            "fields": [
              {
                "id": "fnsPrjName",
